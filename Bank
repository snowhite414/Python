balance = int(input("Enter starting balance: "))
count = 0
while balance < 100000:
    balance = balance * 2
    count += 1
print("It takes " + str(count) + " years to reach $100,000.")

while balance < 1000000:
    balance = balance * 2
    count += 1
print("It takes " + str(count) + " years to reach $1,000,000.")
